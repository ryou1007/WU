  <script>
    function showSong(id) {
      document.querySelectorAll('.song-section').forEach(section => {
        section.classList.remove('active');
      });
      document.getElementById(id).classList.add('active');
    }

    // 初期表示（ふたり計画）
    showSong('futari');
  </script>
